    <script type="text/javascript">

      const authServer = "https://server.local/"; //authntication server address
      const imgServer = "https://imgserver/"; //image server address
      const printServer = "https://printserver/";


    app.controller('checkToken',function($scope,$http,$localStorage){
    	console.log(localStorage.getItem('THRDPRTY'));

      if(localStorage.getItem('THRDPRTY')!==null)
        window.location.href = printServer+'gallery/'+localStorage.getItem('THRDPRTY');


      window.onmessage = function(msg){
        console.log(msg.origin);

        if(msg.origin.substring(0,20) !== authServer.substring(0,20)||msg.origin.substring(0,20) !== imgServer.substring(0,20)){
          console.log("Unrecognised Host Attempting to pass JWT Token");
          return;
        }

        console.log("Host OK, parsing token.");
        var data = JSON.parse(msg.data);
        console.log("Received 3rd Party Token:" + data.thrdPrtyAuth);
        localStorage.setItem('THRDPRTY',data.thrdPrtyAuth);

      }

      if(localStorage.getItem('THRDPRTY')!==null)
        window.location.href = imgServer+'gallery/'+localStorage.getItem('THRDPRTY');

    </script>
